{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "pretty": true,
    "sourceMap": false,
    "target": "es2017"
  },
  "files": [
    "src/index.ts",
    "src/definitions.ts",
    // "src/lib/index.ts",
    // "src/lib/bindings.ts",
    // "src/lib/AccountManager.ts",
    // "src/lib/Account.ts",
    // "src/lib/MessageHandler.ts",
    // "src/types/index.ts"
  ],
  "include": ["src/*", "src/lib/**/*", "src/types/**/*"],
  // "include": ["src/types"],
}
